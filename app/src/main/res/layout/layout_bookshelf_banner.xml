<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_bookshelf_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bookshelf_margin"
        android:layout_marginRight="@dimen/bookshelf_margin"
        android:layout_marginTop="@dimen/bookshelf_margin"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="@drawable/shape_bookshelf_banner"
        android:drawableLeft="@drawable/ic_bookshelf_notice"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_arrows_right_blue"
        android:padding="10dp"
        android:textColor="@color/textColorPrimary" />

</LinearLayout>
