<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/img_book_pic"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_book_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/chk_book_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_delete_checkbox"
            android:layout_margin="5dp"
            android:button="@null"
            android:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:paddingTop="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_book_unread"
        android:gravity="center"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:textSize="10sp"
        android:layout_below="@+id/img_book_pic"
        android:textColor="@android:color/white"
        android:background="@drawable/ic_cards_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
